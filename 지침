  flex-shrink: 0;
  margin-left: var(--space-2);
  padding: var(--space-1);
  background: none;
  border: none;
  cursor: pointer;
  color: var(--text-muted);
  transition: var(--transition-colors);
}

.alert__close:hover {
  color: var(--text-primary);
}

/* Variants */
